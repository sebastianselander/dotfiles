Config { font = "xft:Iosevka Nerd Font:size=11:SemiBold:antialias=true"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "white"
        , sepChar = "%"
        , alignSep = "}{"
        , position = TopW L 100
        , template = "%UnsafeStdinReader%}<fc=#ee9a00>%date%</fc>{%updates% %cpu% | %memory% | %internet% | %bright% | %default:Master% | %battery% | %ESGG% "

        -- plugins
        , commands = [ Run UnsafeStdinReader

                     , Run Weather "ESGG" [ "--template", "<fc=#4682B4><tempC></fc>°C" ] 10

                     , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10

                     , Run Memory ["-t","Mem: <usedratio>%"] 10

                     , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10

                     , Run Volume "default" "Master" [] 1

                     , Run Brightness ["-t", "Br: <percent>%","--","-D","intel_backlight"] 1

                     , Run Com "/home/sebastian/.config/xmonad/scripts/internet.sh" [] "internet" 100

                     , Run Com "/home/sebastian/.config/xmonad/scripts/updates.sh" [] "updates" 600

                    -- battery monitor
                    , Run Battery        [ "--template" , "Bat: <acstatus>"
                                         , "--Low"      , "10"        -- units: %
                                         , "--High"     , "80"        -- units: %
                                         , "--low"      , "darkred"
                                         , "--normal"   , "darkorange"
                                         , "--high"     , "darkgreen"

                                         , "--" -- battery specific options
                                                   -- discharging status
                                                   , "-o"	, "<left>% (<timeleft>)"
                                                   -- AC "on" status
                                                   , "-O"	, "<fc=#dAA520><left></fc>%"
                                                   -- charged status
                                                   , "-i"	, "<fc=#006000><left>%</fc>"
                                         ] 50
                    ]
        }
